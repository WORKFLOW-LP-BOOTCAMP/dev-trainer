{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
      <div class="col-md">
        <ul>
        {% for trainer in trainers %}
          <li>{{ trainer.firstName }} {{ trainer.lastName }}
            <p>{{ trainer.bio }}</p>
            <p>{{ trainer.profession }}</p>
          </li>
        {% endfor %}
      </ul>
      </div>
      <div class="col-md">
        {% for article in articles %}
          <li>{{ article.title }}
            <p>{{ article.date }}</p>
            <p>{{ article.content }}</p>
          </li>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
