{% extends "admin.html.twig" %}

{% block body %}
	<h1 class="mb-4">apprentices List</h1>
	<a href="{{ path('app_admin_create_apprentice')}}" class="btn btn-primary mb-3">Create New apprentice</a>
	<table class="table table-success table-striped">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Profession</th>
				<th>Domain</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for apprentice in apprentices %}
				<tr>
					<td>{{ apprentice.firstName }}</td>
					<td>{{ apprentice.lastName }}</td>
					<td>{{ apprentice.profession }}</td>
					<td>{{ apprentice.domain.value|capitalize }}</td>
					<td>
						No action 
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
