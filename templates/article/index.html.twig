{% extends 'base.html.twig' %}

{% block title %}Hello TrainerController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md">
                <p>Nombre d'article(s) {{ articles | length }}</p>
				{% for article in articles %}
					<div class="card">
						<h5 class="card-header">{{ article.title }}</h5>
						<div class="card-body">
							<h5 class="card-title">{{ article.trainer.firstName }}
							</h5>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
